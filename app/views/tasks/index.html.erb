<% if logged_in? %>


    <h1>タスク一覧</h1>

    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
        <% end %>
    </ul>
    
    <%= link_to '新規タスク追加', new_task_path %>
    <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
    <h1>WELCOME TASKLIST !!</h1>
    
    <%= link_to 'Login', login_path %>
    <%= link_to 'Signup Now', signup_path %>
<% end %>